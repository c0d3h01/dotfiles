[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[magithub]
  online = false

[magithub "status"]
  includeStatusHeader = false
  includePullRequestsSection = false
  includeIssuesSection = false

[advice]
  detachedHead = false
  skippedCherryPicks = false

[credential]
  helper = store

