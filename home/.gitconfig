[user]
    name = Harshal Sawant
    email = harshalsawant.dev@gmail.com
    signingkey = ~/.ssh/id_ed25519.pub

[core]
    editor = nvim
    pager = delta
    autocrlf = false
    safecrlf = true
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes_global
    # Treat spaces before tabs and all kinds of trailing whitespace as an error
    whitespace = space-before-tab,-indent-with-non-tab,trailing-space
    # Speed up commands involving untracked files such as `git status`
    preloadindex = true
    # Enable parallel I/O for operations like `git diff`
    precomposeunicode = false

[init]
    defaultBranch = main

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

# Delta configuration for better diffs
[delta]
    navigate = true
    light = false
    side-by-side = false
    line-numbers = true
    syntax-theme = TwoDark
    file-style = omit
    hunk-header-style = file line-number syntax

[interactive]
    diffFilter = delta --color-only

# Push/Pull configuration
[push]
    default = simple
    autoSetupRemote = true
    recurseSubmodules = on-demand
    followTags = true

[pull]
    rebase = true
    autostash = true

[fetch]
    prune = true
    pruneTags = true
    fsckobjects = true

# Merge configuration
[merge]
    tool = nvim
    conflictstyle = zdiff3
    keepBackup = false
    # Include summaries of merged commits in newly created merge commit messages
    log = true

[mergetool]
    prompt = false
    keepBackup = false

[mergetool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

# Diff configuration
[diff]
    tool = nvim
    algorithm = patience
    renames = copies
    mnemonicPrefix = true
    compactionHeuristic = true
    colorMoved = default
    colorMovedWS = allow-indentation-change

[difftool]
    prompt = false

[difftool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE

# Rebase configuration
[rebase]
    autosquash = true
    autoStash = true
    updateRefs = true
    stat = true

# Branch configuration
[branch]
    autoSetupRebase = always
    autoSetupMerge = always
    sort = -committerdate

# Status configuration
[status]
    showUntrackedFiles = all
    submoduleSummary = true

# Log configuration
[log]
    abbrevCommit = true
    decorate = short
    date = relative

# Rerere (reuse recorded resolution)
[rerere]
    enabled = true
    autoupdate = true

# Submodule configuration
[submodule]
    fetchJobs = 4
    recurse = true

# Performance optimizations
[feature]
    manyFiles = true

[index]
    threads = true

# Commit configuration
[commit]
    verbose = true
    template = ~/.gitmessage

[format]
    signoff = false
    pretty = fuller

# Help configuration
[help]
    autocorrect = 10

# Tag configuration
[tag]
    sort = -version:refname

# URL shortcuts
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

# GitHub configuration
[github]
    user = c0d3h01

# GPG signing
[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password 7.app/Contents/Resources/op-ssh-sign"
    allowedSignersFile = ~/.ssh/allowed_signers

# Credential management
[credential]
	helper = cache
[credential "https://github.com"]
	helper = 
	helper = !/etc/profiles/per-user/c0d3h01/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/etc/profiles/per-user/c0d3h01/bin/gh auth git-credential

# LFS configuration
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

# Security
[transfer]
    fsckobjects = true

[receive]
    fsckObjects = true

[http]
    cookiefile = ~/.gitcookies
    lowSpeedLimit = 0
    lowSpeedTime = 999999
    postBuffer = 524288000

[http "https://github.com"]
    lowSpeedLimit = 0
    lowSpeedTime = 999999

[advice]
    statusHints = false
    detachedHead = false
    skippedCherryPicks = false
    pushUpdateRejected = false
    resolveConflict = false

# Aliases
[alias]     
    aliases = config --get-regexp alias
    remotes = remote --verbose
    contributors = shortlog --summary --numbered
    clone = clone --recursive
    update = !git pull && git submodule update --init --recursive
    st = status
    br = branch --all
    dt = difftool
    lg = log --graph --decorate --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --abbrev-commit
    f = fetch --all --prune
    pf = push --force-with-lease
    pu = push --set-upstream origin HEAD
    pl = pull
    pr = pull --rebase
    ss = stash save
    sp = stash pop
    sl = stash list
    cp = cherry-pick
    wip = !git add -u && git commit -m "WIP"
    undo = reset HEAD~1 --mixed
    amend = commit -a --amend
    ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
    trim = !git remote prune origin && git gc
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    recent = branch --sort=-committerdate --format="%(committerdate:relative)%09%(refname:short)"

[maintenance]
	repo = /home/c0d3h01/dotfiles
